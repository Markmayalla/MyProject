<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tz.co.comptech.m_safariproduction">
    <!--
        Use permission for allowing access to M-Safari Server
        Required for volley Connection
    -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/msafari_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppMaterialTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".StartAppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Auth.VerifyPhoneActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Auth.ResetPasswordActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Auth.SignInActivity"
            tools:ignore="InnerclassSeparator">

        </activity>
        <activity
            android:name=".Auth.Dashboard"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Auth.RegisterActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Register" />
        <activity
            android:name=".Auth.Authentication"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>